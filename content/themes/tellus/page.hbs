{{!< default}}
              
<div class="main-wrapper_tellus">
    {{#post}}
    <header class="post-header_tellus">
        <div class="top-header_tellus {{#if image}} img-cover_tellus" style="background-image: url({{image}}){{else}}no-cover_tellus{{/if}}">
            {{> header_menu}}
        </div>
        {{#if @blog.navigation}}
            {{navigation}}
        {{/if}}
    </header>
    
    <main role="main">
        <article class="{{post_class}}">
            <header class="header-cover_tellus">
                <div class="header-img_tellus {{#if image}} img-cover_tellus" style="background-image: url({{image}}){{else}}no-cover_tellus{{/if}}">
                    <div class="vertical_tellus wrapper_tellus">
                        <section class="inner_tellus">
                            <h1>{{title}}</h1>
                        </section>
                    </div>
                </div>
            </header>
            {{> search}}
            <section class="post-content_tellus wrapper_tellus">
                {{content}}
            </section>  
        </article>
    </main>
    {{/post}}

</div>
 
{{> footer}}    